{% extends "CmfMainBundle::layout.html.twig" %}

{% block content %}

{% createphp page as="rdf" %}
<div {{ createphp_attributes(rdf) }}>

    <h2 {{ createphp_attributes( rdf.title ) }}>{{ createphp_content( rdf.title ) }}</h2>
    <p {{ createphp_attributes( rdf.body ) }}>{{ createphp_content( rdf.body|raw ) }}</p>

        <!-- TODO: next step, use create.js collections instead of twig iterations -->
        {#
        {{ createphp_attributes( rdf.children ) }}
        #}
        <ul>
            {% for news in page.children|reverse %}
                <li>
                    <a href="{{ path(news) }}">{{ news.title }}</a> ({{ news.publishStartDate | date('Y-m-d')  }})
                </li>
            {% endfor %}
        </ul>
    </div>
{% endcreatephp %}

{% endblock %}